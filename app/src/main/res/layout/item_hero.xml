<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageViewHero"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textViewNameHero"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewNameHero"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/textViewNameHero"
        />
    <TextView
        android:id="@+id/textViewTeamHero"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_22"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/imageViewHero"
        app:layout_constraintTop_toBottomOf="@id/textViewNameHero"
        />
</android.support.constraint.ConstraintLayout>
